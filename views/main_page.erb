<html>
  <head></head>

  <style>
    span {
      line-height: 1.5;
    }

    .simpleborder {
      border-color: black;
      border-style: solid;
      border-width: 1px;
      margin: 5px;
      padding: 2px;
    }
  </style>

  <body>
    <h1>Welcome to Chitter</h1>

    <h2>Post to Chitter:</h2>
    <form method="POST" action="/new_peep">
    <input type="text" name="content" placeholder="Tell us what is on your mind">
    <input type="submit" name="Post to Chitter">

    <h2>See what people are talking about:</h2>
      <% for peep in @peeps %>
        <span><%= peep.time %></span><br>
        <span class="simpleborder"><%= @accounts[peep.account_id] %></span><br>
        <div class="simpleborder"><%= peep.content %></div><br>
      <% end %>
  </body>

</html>