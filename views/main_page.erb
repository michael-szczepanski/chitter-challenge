<html>
  <head></head>

  <style>
    span {
      line-height: 1.5;
    }

    .simpleborder {
      border-color: black;
      border-style: solid;
      border-width: 1px;
      margin: 5px;
      padding: 2px;
    }
  </style>

  <body>
    <h1>Welcome to Chitter</h1>

    <% if @user.username != 'anon' %>
      <h2>Logged in as: <%= @user.name %></h2>
    <% end %>

    <form action="/sign_up" method="GET">
      <input type="submit" value="Sign up" />
    </form>
    <% if @user.name == 'Anonymous' %>
      <form action="/log_in" method="GET">
        <input type="submit" value="Log in" />
      </form>
    <% else %>
      <form action="/log_out" method="POST">
        <input type="submit" value="Log out" />
      </form>
    <% end %>

    <h2>Post to Chitter:</h2>
    <h3>Use @username to tag another user in your post</h3>
    <form method="POST" action="/new_peep">
      <input type="text" name="content" placeholder="What is on your mind?"
        oninvalid="alert('You must write something to post it')" required>
      <input type="submit" name="Post to Chitter">
    </form>

<!-- TODO: Tweet replies -->
    <h2>See what people are talking about:</h2>
      <input type="button" value="Refresh peeps" onClick="window.location.reload()"><br>
      <% for peep in @peeps %>
        <span><%= peep.time %></span><br>
        <span class="simpleborder"><%= @accounts[peep.account_id] %></span><br>
        <div class='simpleborder'><%= peep.content %></div>
        <form action="/reply_to" method="POST">
          <input type="hidden" name="id" value="<%= peep.id %>">
          <input type="text" name="content" placeholder="Reply to this peep" 
            oninvalid="alert('You must write something to post it')" required>
          <input type="submit" value="Submit"/>
        </form>
      <% end %>
  </body>

</html>